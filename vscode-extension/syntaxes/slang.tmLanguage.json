{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "slang",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#funcs"
		},
		{
			"include": "#types"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#importants"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#restricted"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"begin": "/\\*",
					"end": "\\*/",
					"name": "comment.block.slang"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.slang",
				"match": "\\b(macro|include|const|end|while|if|fi|again|and|or|xor)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.slang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.slang",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"name":"entity.name.type.slang",
			"match": "\\b()\\b"
		},
		"constants": {
			"name":"constant.character.slang",
			"match": "\\b(True|False)\\b"	
		},
		"funcs": {
			"name": "entity.name.function.slang",
			"match": "\\b(drop|rot|swap|dup|print|peek)\\b"
		},
		"importants": {
			"name": "keyword",
			"match": "\\b(main)\\b"
		},
		"literals": {
			"name": "keyword.other.unit",
			"match": "\\b[0-9]*\\b"
		}
	},
	"scopeName": "source.slang"
}